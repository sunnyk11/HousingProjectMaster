@model HousingProject.Models.NoteViewModel
@{ 
    Layout = null;
}

    @Html.HiddenFor(model => model.BuyerId)
    @Html.HiddenFor(model => model.NoteId)
    <div class="form-group">
        <label for="name">Subject</label>
        @Html.TextBoxFor(model => model.Subject, new { @class = "form-control", @required = "required", placeholder = "Enter Subject" })
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Description</label>
        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @required = "required", rows = 5 })

    </div>


    <div class="text-right">
        <button type="button" class="btn btn-success waves-effect waves-light" id="btnSaveNote">Save</button>
        <button type="button" class="btn btn-danger waves-effect waves-light" data-dismiss="modal">Cancel</button>
    </div>

