@model HousingProject.Data.CustomerContacts
@{
    Layout = null;
}
    @Html.HiddenFor(model => model.BuyerId)
    <div class="form-group">
        <label for="name">Contact Name</label>
        @Html.TextBoxFor(model => model.ContactName, new { @class = "form-control", @required = "required", placeholder = "Enter Subject" })
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Contact No</label>
        @Html.TextBoxFor(model => model.ContactMobile, new { @class = "form-control", @required = "required", type= "number"})

    </div>


    <div class="text-right">
        <button type="button" class="btn btn-success waves-effect waves-light" id="btnSaveContact">Save Contact</button>
        <button type="button" class="btn btn-danger waves-effect waves-light" data-dismiss="modal">Cancel</button>
    </div>