@model HousingProject.Data.Opportunity
@{
    Layout = null;
}

@Html.HiddenFor(model => model.BuyerId)
<div class="form-group">
    <label for="name">Opportunity Name</label>
    @Html.TextBoxFor(model => model.OpportunityName, new { @class = "form-control", @required = "required", placeholder = "Enter opportunity name" })
</div>

<div class="text-right">
    <button type="button" class="btn btn-success waves-effect waves-light" id="btnSaveOpportunity">Save</button>
    <button type="button" class="btn btn-danger waves-effect waves-light" data-dismiss="modal">Cancel</button>
</div>
